@model IEnumerable<MobileShopWeb.ViewModel.BrandTotalProductsVM>

@{
    ViewData["Title"] = "BrandList"; 
}

<div class="container shadow p-5">

<div class="col mb-3">
        <a asp-controller="Brand" asp-action="Create" class="btn btn-primary"><i class="bi bi-file-plus-fill"></i>Create new brand</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Action</th>
            <th scope="col">BrandName</th>
            <th scope="col">Total Products</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <a asp-controller="Brand" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                            <a onclick="deleteBrand(@item.Id)" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>

                    <td>@item.BrandName</td>
                    <td>@item.TotalProducts</td>
                </tr>
            }
 

    </tbody>
</table>

 </div>

