@model Brand

@{
    ViewData["Title"] = "Edit";
}

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit Brand</h2>
    </div>

    <form method="post" asp-action="Edit" asp-controller="Brand">
        <div asp-validation-summary="All"></div>

        <input type="hidden" class="form-control mb-3" asp-for="Id" />

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="BrandName">Brand Name</label>
                <input type="text" class="form-control mb-3" asp-for="BrandName">
                <span asp-validation-for="BrandName" class=" alert-danger"></span>
            </div>


        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>

        <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
        </div>
    </form>

</div>
