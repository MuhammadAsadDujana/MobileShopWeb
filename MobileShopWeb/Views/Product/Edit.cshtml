@model MobileShopWeb.ViewModel.CreateProductVM

@{
    ViewData["Title"] = "Edit";
}


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit product</h2>
    </div>

    <form method="post" asp-action="Edit" asp-controller="Product">
        <div asp-validation-summary="All"></div>

        <input type="hidden" asp-for="@Model.Products.Id" />
      @*  <input type="hidden" asp-for="@Model.Products.BrandId" />*@
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.Products.ProductName">Product Name</label>
                <input type="text" class="form-control mb-3" asp-for="@Model.Products.ProductName" readonly>
                <span asp-validation-for="@Model.Products.ProductName" class=" alert-danger"></span>
            </div>


            <div class="form-group col-md-6">
                <label asp-for="@Model.Products.Price">Price</label>
                <input type="text" class="form-control mb-3" asp-for="@Model.Products.Price" placeholder="Enter Price">
                <span asp-validation-for="@Model.Products.Price" class=" alert-danger"></span>
            </div>


            <div class="form-group col-md-6">
                <label asp-for="@Model.Products.BrandId">Brand</label>
                <select asp-for="@Model.Products.BrandId" class="form-control" asp-items="@Model.BrandsListItem">
                    <option selected>@Model.BrandsListItem.FirstOrDefault().Text</option>
                </select>
            </div>

            <div class="form-group col-md-6">
                <fieldset class="form-group">
                    @* <legend class="mt-4">Color</legend>*@
                    <label class="mt-3">Select Colors</label>
                    @foreach (var item in Model.ColorsListItem)
                    {
                        <div class="form-check">
                            <input class="form-check-input" id="@item.Value" type="checkbox" name="Color" value="@item.Value" checked="@item.Selected" />
                            <label class="form-check-label" for="@item.Value">@item.Text</label>
                        </div>
                    }

                </fieldset>
            </div>


            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>

            <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
        </div>
    </form>

</div>
